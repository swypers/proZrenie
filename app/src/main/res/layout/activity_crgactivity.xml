<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:gravity="center"
        tools:context=".CRGActivity"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_layout"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="20sp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/main_image"
                android:scaleType="fitCenter"
                android:background="@drawable/selected_item"
                android:src="@drawable/kids_game">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="13"
            android:id="@+id/key_images"
            android:orientation="horizontal"
            android:gravity="center">
            <!--
            <ImageButton
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:scaleType="fitCenter"
                android:src="@drawable/kids_game">
            </ImageButton>-->
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom">
    </ImageView>
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:background="@drawable/border_filled_purple"
        android:src="@drawable/back_button"
        android:layout_gravity="bottom">
    </ImageButton>
    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:background="@drawable/border_filled_purple"
        android:src="@drawable/refresh_button"
        android:layout_gravity="center|bottom">
    </ImageButton>
    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/border_filled_purple"
        android:src="@drawable/help_button"
        android:layout_gravity="right|bottom">
    </ImageButton>
    <ImageButton
        android:id="@+id/check_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/border_filled_purple"
        android:src="@drawable/go_button"
        android:layout_gravity="top|center">
    </ImageButton>
</FrameLayout>